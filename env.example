# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Google API Configuration
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/service-account-key.json
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_REDIRECT_URI=http://localhost:3000/api/auth/google/callback

# Optional: Google Drive API Key (if using API key instead of service account)
GOOGLE_API_KEY=your_google_api_key

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret
NEXTAUTH_URL=http://localhost:3000

# API Key Encryption (Optional - for additional security)
# If not set, a client-side key will be generated and stored in localStorage
NEXT_PUBLIC_ENCRYPTION_KEY=your_32_character_encryption_key_here

# File Upload Configuration
NEXT_PUBLIC_MAX_FILE_SIZE=104857600
NEXT_PUBLIC_ALLOWED_FILE_TYPES=pdf,doc,docx,txt,md,jpg,jpeg,png,gif,svg,csv,xlsx

# Search Configuration
NEXT_PUBLIC_SEARCH_RESULTS_LIMIT=50
NEXT_PUBLIC_ENABLE_AI_CATEGORIZATION=true

# AI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=200
OPENAI_TEMPERATURE=0.7

# AI Rate Limiting (Optional - defaults shown)
AI_RATE_LIMIT_REQUESTS=5
AI_RATE_LIMIT_WINDOW_HOURS=1
AI_DAILY_LIMIT=10
AI_MONTHLY_LIMIT=50
AI_MONTHLY_COST_LIMIT=5

# API Configuration
NEXT_PUBLIC_ENABLE_API_KEY_MANAGEMENT=true
NEXT_PUBLIC_ENABLE_WEBHOOKS=true
